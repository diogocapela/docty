            android:screenOrientation="portrait"></activity>

        <!-- Values Gastrointestinal -->
        <activity
            android:name=".ValuesGastrointestinalActivity"
            android:configChanges="orientation"
            android:label="@string/gastrointestinal"
            android:screenOrientation="portrait"></activity>

