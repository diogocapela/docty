            android:screenOrientation="portrait"></activity>

        <!-- Values Neurology -->
        <activity
            android:name=".ValuesNeurologyActivity"
            android:configChanges="orientation"
            android:label="@string/neurology"
            android:screenOrientation="portrait"></activity>

        <!-- Values Miscellaneous -->
        <activity
            android:name=".ValuesMiscellaneousActivity"
            android:configChanges="orientation"
            android:label="@string/miscellaneous"
            android:screenOrientation="portrait"></activity>
